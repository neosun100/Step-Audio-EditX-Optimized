cat > start_ui_container.sh << 'EOF'
#!/bin/bash
# Step-Audio-EditX UI å®¹å™¨å¯åŠ¨è„šæœ¬

set -e

PROJECT_DIR="/home/neo/upload/Step-Audio-EditX"  # âš ï¸ ä¿®æ”¹ä¸ºæ‚¨çš„é¡¹ç›®è·¯å¾„
GPU_ID=2                                          # âš ï¸ ä¿®æ”¹ä¸ºæ‚¨è¦ä½¿ç”¨çš„ GPU ID
