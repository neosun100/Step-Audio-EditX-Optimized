  --name step-audio-ui-opt \
  --restart=always \
  --gpus '"device='${GPU_ID}'"' \
  -p ${UI_PORT}:7860 \
  -v ${PROJECT_DIR}:/app \
  -v ${PROJECT_DIR}/models:/app/models:ro \
  -v ${PROJECT_DIR}/cache:/app/cache \
  -e CUDA_VISIBLE_DEVICES=0 \
  -e PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True \
  step-audio-editx:latest \
  python app.py \
    --model-path /app/models/Step-Audio-EditX \
    --tokenizer-model-id /app/models/Step-Audio-Tokenizer \
    --model-source local \
    --enable-auto-transcribe \
    --server-name 0.0.0.0 \
    --server-port 7860

if [ $? -eq 0 ]; then
    echo "âœ… UI å®¹å™¨å¯åŠ¨æˆåŠŸï¼"
    echo ""
    echo "ğŸ“‹ æŸ¥çœ‹æ—¥å¿—: docker logs -f step-audio-ui-opt"
    echo "ğŸŒ è®¿é—®åœ°å€: http://localhost:${UI_PORT}"
    echo ""
    echo "â³ ç­‰å¾…æœåŠ¡å¯åŠ¨ï¼ˆçº¦ 3 åˆ†é’Ÿï¼‰..."
else
    echo "âŒ å®¹å™¨å¯åŠ¨å¤±è´¥ï¼"
